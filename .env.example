# USSH Freshers' Hub - Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=3000
APP_NAME=USSH Freshers' Hub
APP_URL=http://localhost:3000

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/ussh_freshers_hub
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ussh_freshers_hub

# MongoDB Authentication (for production)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_password_in_production
MONGO_INITDB_DATABASE=ussh_freshers_hub

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_password_in_production

# ================================
# SECURITY SECRETS
# ================================
# Session Secret (use openssl rand -base64 32)
SESSION_SECRET=change_this_session_secret_in_production

# JWT Secret (use openssl rand -base64 64)
JWT_SECRET=change_this_jwt_secret_in_production
JWT_EXPIRE=7d

# Encryption key for sensitive data
ENCRYPTION_KEY=change_this_encryption_key_in_production

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email settings
FROM_EMAIL=noreply@ussh-freshers-hub.com
FROM_NAME=USSH Freshers' Hub

# ================================
# FILE UPLOAD SETTINGS
# ================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ================================
# EXTERNAL APIs
# ================================
# AI Chatbot API (if using external service)
OPENAI_API_KEY=your-openai-api-key
CHATBOT_API_URL=https://api.openai.com/v1

# ================================
# SOCIAL LOGIN (Optional)
# ================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ================================
# ANALYTICS & MONITORING
# ================================
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Error tracking (e.g., Sentry)
SENTRY_DSN=your-sentry-dsn

# ================================
# DEVELOPMENT SETTINGS
# ================================
DEBUG=true
MOCK_EMAIL=true
ENABLE_SWAGGER=true

# ================================
# PRODUCTION SETTINGS
# ================================
# Set these in production environment
TRUST_PROXY=true
SECURE_COOKIES=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
