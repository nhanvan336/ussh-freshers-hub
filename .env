# USSH Freshers' Hub Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ussh_freshers_hub

# Authentication
JWT_SECRET=ussh-freshers-hub-jwt-secret-key-2025-development
JWT_REFRESH_SECRET=ussh-freshers-hub-refresh-secret-key-2025-development
SESSION_SECRET=ussh-freshers-hub-session-secret-key-2025-development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AI Chatbot Configuration (optional)
# OPENAI_API_KEY=your-openai-api-key
# CHATBOT_MODEL=gpt-3.5-turbo

# Rate Limiting
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW=900000

# Security
BCRYPT_SALT_ROUNDS=12

# Development
DEBUG=true
LOG_LEVEL=debug