# USSH Freshers' Hub - Development Environment
NODE_ENV=development
PORT=3000
APP_NAME=USSH Freshers' Hub (Dev)
APP_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://mongodb:27017/ussh_freshers_hub_dev
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=ussh_freshers_hub_dev

# MongoDB Authentication
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=ussh_freshers_hub_dev

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Security (development keys - DO NOT use in production)
SESSION_SECRET=dev_session_secret_change_in_production
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRE=7d
ENCRYPTION_KEY=dev_encryption_key_change_in_production

# Email (development - mock)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev-user
SMTP_PASS=dev-pass
FROM_EMAIL=dev@ussh-freshers-hub.com
FROM_NAME=USSH Freshers' Hub Dev

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=true
MOCK_EMAIL=true
ENABLE_SWAGGER=true
TRUST_PROXY=false
SECURE_COOKIES=false
HELMET_ENABLED=false
COMPRESSION_ENABLED=false
