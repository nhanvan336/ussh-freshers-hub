# USSH Freshers' Hub - Production Environment
# IMPORTANT: Replace all placeholder values with actual production values

NODE_ENV=production
PORT=3000
APP_NAME=USSH Freshers' Hub
APP_URL=https://your-domain.com

# Database
MONGODB_URI=mongodb://mongodb:27017/ussh_freshers_hub
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=ussh_freshers_hub

# MongoDB Authentication - CHANGE THESE VALUES
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MONGO_INITDB_DATABASE=ussh_freshers_hub

# Redis - CHANGE PASSWORD
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Security - GENERATE STRONG SECRETS
# Use: openssl rand -base64 32 for SESSION_SECRET
# Use: openssl rand -base64 64 for JWT_SECRET
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_PRODUCTION
JWT_SECRET=CHANGE_THIS_JWT_SECRET_PRODUCTION
JWT_EXPIRE=7d
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_PRODUCTION

# Email Configuration - CONFIGURE YOUR SMTP
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=USSH Freshers' Hub

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting (strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External APIs (optional)
OPENAI_API_KEY=your-openai-api-key-if-needed
CHATBOT_API_URL=https://api.openai.com/v1

# Social Login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
SENTRY_DSN=your-sentry-dsn

# Production Settings
DEBUG=false
MOCK_EMAIL=false
ENABLE_SWAGGER=false
TRUST_PROXY=true
SECURE_COOKIES=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
