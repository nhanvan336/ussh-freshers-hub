<div class="list-group-item list-group-item-action post-item <%= isSticky ? 'sticky-post' : '' %>">
    <div class="d-flex w-100">
        <!-- Phần avatar đã được ẩn theo yêu cầu -->
        <div class="w-100">
            <%# Logic mới: Kiểm tra nếu có externalUrl để thay đổi link %>
            <a href="<%= post.externalUrl ? post.externalUrl : '/forum/post/' + post._id %>" 
               class="text-decoration-none text-dark"
               <%= post.externalUrl ? 'target="_blank"' : '' %>>
                <h5 class="mb-1 topic-title"><%= post.title %></h5>
            </a>

            <div class="topic-details mb-2">
                <% if (isSticky) { %>
                    <span><i class="fas fa-thumbtack text-warning me-1"></i> Ghim bởi</span>
                <% } %>
                <a href="#" class="text-primary fw-bold text-decoration-none"><%= post.author ? post.author.username : 'Ẩn danh' %></a>
                <span class="mx-1">&middot;</span>
                <span class="text-muted"><%= new Date(post.lastActivity).toLocaleDateString('vi-VN') %></span>
                <% if (post.category) { %>
                    <span class="mx-1">&middot;</span>
                    <span class="badge bg-light text-dark border"><%= post.category.charAt(0).toUpperCase() + post.category.slice(1) %></span>
                <% } %>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-3 text-muted">
                    <span><i class="far fa-thumbs-up me-1"></i><%= post.likesCount %></span>
                    <span><i class="far fa-comments me-1"></i><%= post.commentsCount %></span>
                    <span><i class="far fa-eye me-1"></i><%= post.views %></span>
                </div>
                
                <%# Chỉ hiển thị nút "Xem bài gốc" nếu có externalUrl %>
                <% if (post.externalUrl) { %>
                    <a href="<%= post.externalUrl %>" target="_blank" class="btn btn-sm btn-outline-success">
                        Xem bài gốc <i class="fas fa-external-link-alt ms-1"></i>
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>

