<div class="sidebar">
    <% if (user) { %>
        <!-- Nút tạo bài đăng khi đã đăng nhập -->
        <div class="d-grid mb-4">
            <a href="/forum/create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle"></i> Tạo bài đăng
            </a>
        </div>
    <% } else { %>
        <!-- Nút đăng nhập khi chưa đăng nhập -->
        <div class="card text-center mb-4">
            <div class="card-body">
                <h5 class="card-title">Tham gia thảo luận</h5>
                <p class="card-text">Đăng nhập để bắt đầu đăng bài và bình luận cùng cộng đồng.</p>
                <!-- [SỬA 5] Sửa link đăng nhập -->
                <a href="/auth/login" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập để đăng bài
                </a>
            </div>
        </div>
    <% } %>
</div>

