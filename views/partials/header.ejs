<header class="header">
    <div class="container">
        <nav class="navbar" role="navigation" aria-label="Main navigation">
            <a href="/" class="navbar-brand">
                <img src="/images/logo-ussh.png" alt="Logo USSH" class="brand-logo">
                <h1 class="brand-name">USSH Freshers' Hub</h1>
            </a>
            
            <button class="mobile-menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>
            
            <div class="navbar-menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'home' ? 'active' : '' %>">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/learning-hub" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'learning-hub' ? 'active' : '' %>">
                            <i class="fas fa-book-open"></i>
                            <span>Học tập</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/forum" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'forum' ? 'active' : '' %>">
                            <i class="fas fa-users"></i>
                            <span>Diễn đàn</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/wellness" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'wellness' ? 'active' : '' %>">
                            <i class="fas fa-heart"></i>
                            <span>Sức khỏe</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/handbook" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'handbook' ? 'active' : '' %>">
                            <i class="fas fa-map"></i>
                            <span>Cẩm nang</span>
                        </a>
                    </li>
                </ul>
                
                <div class="navbar-actions">
                    <% if (isAuthenticated && user) { %>
                        <!-- *** BỔ SUNG GIAO DIỆN KHI ĐÃ ĐĂNG NHẬP VÀO ĐÂY *** -->
                        <div class="user-menu dropdown">
                            <button class="user-toggle">
                                <img src="<%= user.avatar || '/images/avatars/default-avatar.png' %>" alt="Avatar" class="user-avatar">
                                <span class="user-name"><%= user.fullName %></span>
                                <i class="fas fa-chevron-down dropdown-arrow"></i>
                            </button>
                            <div class="dropdown-menu user-dropdown">
                                <a href="/auth/profile" class="dropdown-item">
                                    <i class="fas fa-user-circle"></i> Hồ sơ của tôi
                                </a>
                                <div class="dropdown-divider"></div>
                                <!-- Nút Đăng xuất là một form để bảo mật -->
                                <form action="/auth/logout" method="POST" style="margin:0;">
                                    <button type="submit" class="dropdown-item logout-btn">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Giao diện khi là khách (giữ nguyên code của bạn) -->
                        <div class="auth-buttons">
                            <a href="/auth/login" class="btn btn-outline">Đăng nhập</a>
                            <a href="/auth/register" class="btn btn-primary">Đăng ký</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </nav>
    </div>
</header>
