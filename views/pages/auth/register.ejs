<div class="auth-wrapper">
    <div class="auth-card register-card">
        <h2 class="text-center">Tạo tài khoản mới</h2>
        <p class="auth-subtitle">Tham gia cộng đồng sinh viên năm nhất USSH.</p>

        <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= messages.error[0] %></div>
        <% } %>

        <form action="/auth/register" method="POST">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="fullName" class="form-label">Họ và Tên</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" required>
                </div>
                <div class="col-md-6 form-group">
                    <label for="studentId" class="form-label">Mã số sinh viên</label>
                    <input type="text" id="studentId" name="studentId" class="form-control" required>
                </div>
            </div>
            
            <!-- BỔ SUNG TẠI ĐÂY: Thay thế input bằng select/dropdown -->
            <div class="form-group">
                <label for="major" class="form-label">Ngành học</label>
                <select id="major" name="major" class="form-control" required>
                    <option value="" disabled selected>-- Chọn ngành của bạn --</option>
                    <option value="Vietnamese Literature">Văn học</option>
                    <option value="History">Lịch sử</option>
                    <option value="Philosophy">Triết học</option>
                    <option value="Psychology">Tâm lý học</option>
                    <option value="Sociology">Xã hội học</option>
                    <option value="Journalism">Báo chí</option>
                    <option value="International Studies">Quốc tế học</option>
                    <option value="Oriental Studies">Đông phương học</option>
                    <option value="Library Science">Thông tin - Thư viện</option>
                    <option value="Other">Ngành khác</option>
                </select>
            </div>
            
             <div class="form-group">
                <label for="username" class="form-label">Tên đăng nhập</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mt-3">Đăng ký</button>
        </form>

        <div class="auth-links">
            Đã có tài khoản? <a href="/auth/login">Đăng nhập</a>
        </div>
    </div>
</div>
