<%# File: views/pages/handbook/campus-map.ejs - Đã được cập nhật %>

<div class="page-header">
    <div class="container">
        <a href="/handbook" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại cẩm nang</a>
        
        <!-- 1. ĐỔI TIÊU ĐỀ VÀ THAY H1 BẰNG H2 CHO NHỎ HƠN -->
        <h2>Bản đồ</h2>
        <p class="subtitle">Khám phá các địa điểm quan trọng trong khuôn viên trường.</p>
    </div>
</div>

<div class="container page-content">
    <div class="map-container">
        <!-- Ảnh bản đồ (giữ nguyên) -->
        <div class="campus-map-image" style="background-image: url('/images/ussh-map.png');">
            
            <!-- 2. ĐÃ LOẠI BỎ CÁC ĐIỂM ĐÁNH DẤU TƯƠNG TÁC -->

        </div>

        <!-- Chú thích cho các địa điểm (sẽ tự cập nhật sau khi sửa file handbook.js) -->
        <div class="map-legend">
            <h4>Chú thích</h4>
            <ul class="list-group list-group-flush">
                 <% if (typeof locations !== 'undefined' && locations.length > 0) { %>
                    <% locations.forEach(location => { %>
                        <li class="list-group-item">
                            <strong><%= location.name %>:</strong> <%= location.description %>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li class="list-group-item">Chưa có dữ liệu địa điểm.</li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<%# Đã loại bỏ CSS và JS không cần thiết để trang đơn giản hơn %>
<style>
    .map-container {
        position: relative;
    }
    .campus-map-image {
        position: relative;
        width: 100%;
        height: 600px;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        border: 2px solid #eee;
        border-radius: 8px;
    }
    .map-legend {
        margin-top: 2rem;
    }
</style>
