<%# File: views/pages/handbook/events.ejs %>

<div class="page-header">
  <div class="container">
    <a href="/handbook" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại Cẩm nang</a>
    <h2>Sự kiện nổi bật</h2>
    <p class="subtitle">Khám phá các sự kiện và hoạt động sôi nổi của sinh viên Nhân văn.</p>
  </div>
</div>

<div class="container page-content">
  <div class="row">
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <a href="<%= event.externalUrl %>" target="_blank" class="card-link">
            <div class="card h-100 card-event">
              <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <p class="card-text text-muted"><%= event.description %></p>
              </div>
              <div class="card-footer text-center">
                Xem chi tiết
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col">
        <p>Hiện chưa có sự kiện nổi bật nào.</p>
      </div>
    <% } %>
  </div>
</div>

<style>
  .card-link {
    text-decoration: none;
    color: inherit;
  }
  .card-event {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  .card-event:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
  .card-event .card-img-top {
    height: 220px;
    object-fit: cover;
  }
  .card-event .card-footer {
    background-color: #f8f9fa;
    font-weight: 500;
  }
</style>
