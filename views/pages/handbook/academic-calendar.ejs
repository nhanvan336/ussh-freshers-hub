<%# File: views/pages/handbook/academic-calendar.ejs - Đã sửa lỗi co giãn ảnh %>

<div class="page-header">
  <div class="container">
    <a href="/handbook" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại cẩm nang</a>

    <% if (typeof calendarData !== 'undefined') { %>
      <h2>Lịch năm học</h2>
      <p class="subtitle">Cập nhật lần cuối: <%= calendarData.lastUpdated %></p>
    <% } else { %>
      <h2>Lịch năm học</h2>
      <p class="subtitle">Không thể tải dữ liệu lịch.</p>
    <% } %>
  </div>
</div>

<div class="container page-content">
  <div class="calendar-image-container">
    <% if (typeof calendarData !== 'undefined' && calendarData.imageUrl) { %>
      <%# Chỉ cần class img-fluid là đủ %>
      <img src="<%= calendarData.imageUrl %>" alt="Lịch năm học" class="img-fluid rounded shadow-sm">
    <% } else { %>
      <div class="alert alert-warning" role="alert">
        Không tìm thấy hình ảnh lịch năm học.
      </div>
    <% } %>
  </div>
</div>

<style>
  .calendar-image-container {
    width: 100%;
    max-width: 900px; /* Bạn có thể thay đổi chiều rộng tối đa này */
    margin: 0 auto; /* Căn giữa */
  }

  /* class img-fluid của Bootstrap sẽ làm việc này, 
     nhưng ta thêm vào để đảm bảo nó chắc chắn hoạt động */
  .calendar-image-container img {
    width: 100%;
    height: auto; /* Quan trọng: chiều cao sẽ tự động điều chỉnh để giữ đúng tỷ lệ ảnh */
    border: 1px solid #ddd;
  }
</style>
