<%# File: views/pages/wellness/bookmarks.ejs %>

<div class="page-header">
    <div class="container">
        <h1>Bài viết đã lưu</h1>
        <p class="subtitle">Những bài viết bạn quan tâm, lưu lại để đọc sau.</p>
    </div>
</div>

<div class="container page-content">
    <% if (locals.entries && entries.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% entries.forEach(entry => { %>
                <div class="col">
                    <div class="card wellness-card h-100">
                         <a href="/wellness/entry/<%= entry._id %>">
                            <div class="card-img-top" style="background-image: url('<%= entry.coverImage || `https://placehold.co/600x400/FFF1D0/A16207?text=${encodeURIComponent(entry.category)}` %>');"></div>
                         </a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="/wellness/entry/<%= entry._id %>"><%= entry.title %></a></h5>
                            <p class="card-text text-muted small"><%= entry.summary %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center">
            <p>Bạn chưa lưu bài viết nào.</p>
        </div>
    <% } %>
</div>
