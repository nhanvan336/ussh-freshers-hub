<div class="container my-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <a href="/wellness" class="back-link mb-4 d-inline-block"><i class="fas fa-arrow-left"></i> Quay lại góc sức khỏe</a>
      
      <h1><%= entry.title %></h1>
      <p class="text-muted">
        <span><i class="fas fa-calendar-alt"></i> <%= new Date(entry.publishDate).toLocaleDateString('vi-VN') %></span> | 
        <span><i class="fas fa-eye"></i> <%= entry.views %> lượt xem</span>
      </p>

      <% if (entry.imageUrl) { %>
        <img src="<%= entry.imageUrl %>" class="img-fluid rounded my-4" alt="<%= entry.title %>">
      <% } %>

      <div class="entry-content">
        <%- entry.content %>
      </div>

      <hr class="my-4">

      <div class="d-flex justify-content-end gap-3">
        <button class="btn btn-outline-primary"><i class="fas fa-thumbs-up"></i> Thích (<%= entry.likesCount || 0 %>)</button>
        <button class="btn btn-outline-secondary"><i class="fas fa-bookmark"></i> Lưu (<%= entry.bookmarksCount || 0 %>)</button>
      </div>
      
      <div class="comments-section mt-5">
        <h4>Bình luận</h4>
        <% if (entry.comments && entry.comments.length > 0) { %>
          <% entry.comments.forEach(comment => { %>
            <div class="card mb-3">
              <div class="card-body">
                <p class="card-text"><%= comment.content %></p>
                <small class="text-muted">Đăng bởi <%= comment.isAnonymous ? 'Người dùng ẩn danh' : comment.user.fullName %> lúc <%= new Date(comment.createdAt).toLocaleString('vi-VN') %></small>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>Chưa có bình luận nào.</p>
        <% } %>
      </div>

    </div>
  </div>
</div>
